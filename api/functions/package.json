{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "watch": {
    "start": "*.js"
  },
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "watch": "env NODE_ENV=dev npm-watch start",
    "start": "npx @google-cloud/functions-framework --target=api",
    "start2": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --watchAll"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.2"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.5.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.1.0",
    "eslint-plugin-promise": "latest",
    "firebase": "^7.16.1",
    "firebase-functions-test": "latest",
    "jest": "^26.0.1",
    "npm-watch": "^0.6.0",
    "supertest": "^4.0.2"
  },
  "private": true
}
